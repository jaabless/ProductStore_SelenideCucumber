<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console appender with colors -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} [%thread] %-5level %highlight(%-25logger{36}) - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="info">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>